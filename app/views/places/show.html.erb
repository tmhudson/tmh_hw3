<h1><%= @place["name"] %></h1>

<ul>
  <% for post in @posts %>
    <li>
        <h2> <%= post["title"] %> </h2>
        <p> <%= post["posted_on"]%> </p>
        <p> <%= post["description"]%> </p>
    </li>
  <% end %>
</ul>

<p>
  <a href="/posts/new?place_id=<%= @place["id"] %>">New Post</a>
</p>

<p><a href="/places">Get outta here</a></p>